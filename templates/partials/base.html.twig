{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!doctype html>
<html>
<head>
  {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    <link href="http://fonts.googleapis.com/css?family=Lato:400,400,300,900" rel="stylesheet" type="text/css">

    {% block stylesheets %}
      {% do assets.addCss('theme://css/main-position.css', 102) %}
      {# not use it for now
      {% do assets.addDirCss('theme://css/pure', 101) %}
      {% do assets.addCss('https://unpkg.com/purecss@0.6.2/build/base-min.css', 103) %}
      {% do assets.addCss('https://unpkg.com/purecss@0.6.2/build/grids-responsive-min.css', 104) %}
      #}
    {% endblock %}
    {{ assets.css() }}
    <link rel="stylesheet" href="https://unpkg.com/purecss@0.6.2/build/pure-min.css">
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="https://unpkg.com/purecss@0.6.2/build/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="https://unpkg.com/purecss@0.6.2/build/grids-responsive-min.css">
    <!--<![endif]-->
  {% endblock head %}
</head>


<body id="body">
  <div id="navigation">
    {% block navigation %}
    {% include 'partials/navigation.html.twig' %}
    {% endblock navigation %}
  </div>

  <div id="header" >
    {% block header %}
    <div class="horizontal-center">
      <h1>{{ page.header.top_header|defined ('Hello World') }}</h2>
      <p>{{ page.header.description|defined ('This is the templates default description, change it in the pages YAML header') }}</p>
    </div>
    {% endblock header %}
  </div>

<div id="content">
  {% block content %}
    {{ page.content }}
  {% endblock content %}
</div>


{% block footer %}
  <div id="footer">
    {% if site.address %}
    <p>{{ site.address.name }} | {{ site.address.street }} | {{ site.address.city }}</p>
    {% endif %}
  </div>
{% endblock footer %}

</body>
</html>
