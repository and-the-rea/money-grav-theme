{% extends 'partials/base.html.twig' %}




{% block content %}
  <div class="topics pure-g">
  {% for p in page.collection %}
    <div class="pure-u-1 pure-u-md-1-2">
    <h4 class"topic"><a href="{{ p.url }}">{{ p.title }}</a></h2>
      <ul>
      {% for article in p.children %}
        <li><a href="{{ article.url }}">{{ article.title }}</a></li>
      {% endfor %}
      </ul>
    </div>
  {% endfor %}
  </div>
  {{ page.content }}
{% endblock %}
